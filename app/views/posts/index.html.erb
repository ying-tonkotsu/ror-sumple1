<%# 変数を定義 %>
<div class="main posts-index">

  <div class="container">
    <div class="posts-index-item center newpost-link">
      <%= link_to("new post","/posts/new") %>
    </div>
  </div>

  <div class="container">

    <% @posts.each do |post| %>
        <div class="posts-index-item">
          <div class="post-user-name flex">
            <img class="profile" src="<%= "/user_images/#{post.user.image_name}" %>">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <div class="post-right">
            <%= link_to(post.content , "/posts/#{post.id}")%>
          </>
        </div>
    <% end %>

  </div>

</div>