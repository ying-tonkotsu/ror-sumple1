<%# 変数を定義 %>
<div class="main posts-index">
  <div class="container">
    <div class="posts-index-item center newpost-link">
      <%= link_to("新規投稿","/posts/new") %>
    </div>
  </div>
  <div class="container">
    <% @posts.each do |post| %>
        <div class="posts-index-item">
            <%= link_to(post.content , "/posts/#{post.id}")%>
        </div>
    <% end %>
  </div>
</div>